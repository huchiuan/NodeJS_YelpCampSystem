<% layout('layouts/boilerplate')%>
    
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-4">
        <form action="/campgrounds" method = "POST" novalidate class="validated-form">  <!--  novalidate 關閉表單的驗證功能 用boostrap 的required-->
            <div class="mb-3">
                <label class="form-label"for="title">Title</label>
                <input class="form-control" type="text" id="title" name ="campground[title]" required>
                <div class="valid-feedback">
                    內容正確!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label"for="location">Location</label>
                <input class="form-control"type="text" id="location" name ="campground[location]" required>
                <div class="valid-feedback">
                    內容正確!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label"for="image">Image URL</label>
                <input class="form-control"type="text" id="image" name ="campground[image]" required>
                <div class="valid-feedback">
                    內容正確!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label"for="price">Camoground Price</label>
                <div class="input-group"><!--沒用這個包起來的化，在葉面上 下面那兩行會分開。-->
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price"
                    placeholder="0.00" aria-label="price" aria-describedby="price-label"name ="campground[price]" required>
                    <div class="valid-feedback">
                        內容正確!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label"for="desciption">Desciption</label>
                <textarea class="form-control"type="text" id="desciption" name ="campground[desciption]" required> </textarea>
                <div class="valid-feedback">
                    內容正確!
                </div>
            
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add campground</button>
            </div>
            
        </form>
        <a href="/campgrounds">All campgrounds</a>
    </div>
</div>

